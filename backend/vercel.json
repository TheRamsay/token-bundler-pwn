{
    "version": 2,
    "builds": [
        {
            "src": "token_bundler/token_bundler/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { "distDir": "token_bundler" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "token_bundler/token_bundler/wsgi.py"
        }
    ]
}
